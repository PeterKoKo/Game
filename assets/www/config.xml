<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap   = "http://phonegap.com/ns/1.0"
	id          = "com.mkgamecentre.abcgame"
	version     = "1.0.0"
	versionCode = "100" > <!-- versionCode is optional and Android only -->
	<!-- Tool Set Version -->        
	<preference name='phonegap-version' value='cli-5.2.0' />
	<preference name="android-build-tool" value="gradle"/>

	<name>Myanmar ABC Game</name>
	<description>Play and learn ABC</description>
	<author href="http://www.twittor.com/@myokoko" email="myokoko19@gmail.com">
        Myo Ko
	</author>

	<!-- App requested permission -->
	<preference name="permissions" value="none"/>
	<preference name="orientation" value="landscape" />
	<preference name="fullscreen" value="true" />


	<!-- ANDROID * ANDROID * ANDROID -->
	<platform name="android" ></platform>

	<!-- PLUGINS * PLUGINS * PLUGINS -->
	<plugin name="cordova-plugin-device"         source="npm" spec="1.0.1" />
	<plugin name="cordova-plugin-whitelist"      source="npm" spec="1.0.0" />
	<plugin name="cordova-plugin-media-extended" source="npm" spec="2.2.11" />
	<plugin name="com.admob.google" spec="4.0.8" source="pgb" />
	<gap:plugin name="cordova-plugin-admobpro" source="pgb" />

	<!-- WHITELIST * WHITELIST * WHITELIST -->

	<!-- <allow-navigation href="http://www..com/" />
	<allow-navigation href="http://www..com/" />
	<allow-navigation href="http://" /> -->

	<!-- <allow-intent href="*" /> -->
	<access origin="*" /> <!-- Required for iOS9 -->
</widget>
	
	
	

